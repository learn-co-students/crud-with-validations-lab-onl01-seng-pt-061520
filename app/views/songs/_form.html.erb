<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
    <h2>
      <%= pluralize(@post.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @song do |f| %>
    <%= f.label :title, "Title"%>
    <%= f.text_field :title %>

    <%= f.label :released, "Released" %>
    <%= f.text_field :released %>
   
    <%= f.label  :release_year, "Release Year"%>
    <%= f.number_field :release_year %>

    <%= f.label :artist_name, "Artist Name"%>
    <%= f.text_field :artist_name %>

    <%= f.label :genre, "Genre"%>
    <%= f.text_field :genre %> 
    
    
    <%= f.submit %>

  <% end %>