<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :released, "Released?" %>
    <%= f.check_box :released %>
  </div>

  <div class="field">
    <%= f.label :release_year, "Year:" %>
    <%= f.number_field :release_year %>
  </div>

  <div class="field">
    <%= f.label :genre, "Genre:" %>
    <%= f.text_field :genre %>   
  </div>
  
  <div class="field">
    <%= f.label :artist_name, "Artist:" %>
    <%= f.text_field :artist_name %>   
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>